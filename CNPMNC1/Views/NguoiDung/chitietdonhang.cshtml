@model IEnumerable<CNPMNC1.Models.chitietdonhang>

@{
    ViewBag.Title = "chitietdonhang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>chitietdonhang</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tensanpham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.thuonghieu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.namsx)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.loai_sanpham)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.soluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tongtien)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.tensanpham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.thuonghieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.namsx)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mota)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loai_sanpham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gia)
        </td>
        <td>
            <img src="@Url.Content(item.ImagePro)" height="150" width="150" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soluong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tongtien)
        </td>
    </tr>
}

</table>
