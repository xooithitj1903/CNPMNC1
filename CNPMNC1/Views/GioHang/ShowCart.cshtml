@model CNPMNC1.Models.Cart

@{
    ViewBag.Title = "ShowCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Giở hàng</h2>
<a href="@Url.Action("Index","SanPham")">TIếp tục mua hàng</a>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Hình sản phẩm</th>
                <th>GIá</th>
                <th>Số Lượng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                decimal total = item.quantity * (decimal)item.sanPham.gia.Value;
                <tr>
                    <td>@Html.DisplayFor(model => item.sanPham.tensanpham)</td>
                    <td><img src="@Url.Content(item.sanPham.ImagePro)" height="50" width="50" /></td>
                    <td>@Html.DisplayFor(model => item.sanPham.gia)</td>
                    <td>
                        @using (Html.BeginForm("update_cart_quantity", "GioHang"))
                        {
                            <input type="hidden" value="@item.sanPham.idsanpham" name="ID" />
                            <input type="number" value="@item.quantity" name="carquantity" />
                            <input type="submit" value="Update" />
                        }
                    </td>
                    <td>@total</td>
                    <td>
                        <a href="@Url.Action("RemoveCart", "GioHang", new { id = item.sanPham.idsanpham })">Xoa</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @Html.Partial("EmptyCart")
}

